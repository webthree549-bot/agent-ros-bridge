{
  "categories": [
    {
      "title": "## ğŸš€ Features",
      "labels": ["feature", "enhancement"]
    },
    {
      "title": "## ğŸ› Bug Fixes",
      "labels": ["bug", "fix"]
    },
    {
      "title": "## ğŸ“ Documentation",
      "labels": ["documentation", "docs"]
    },
    {
      "title": "## ğŸ”§ Maintenance",
      "labels": ["maintenance", "chore", "refactor"]
    },
    {
      "title": "## ğŸ§ª Testing",
      "labels": ["testing", "test"]
    },
    {
      "title": "## ğŸ”’ Security",
      "labels": ["security"]
    },
    {
      "title": "## ğŸ“¦ Dependencies",
      "labels": ["dependencies"]
    }
  ],
  "ignore_labels": [
    "ignore",
    "skip-changelog"
  ],
  "sort": {
    "order": "ASC",
    "on_property": "mergedAt"
  },
  "template": "# What's Changed\n\n{{CHANGELOG}}\n\n## ğŸ‘ Contributors\n\n{{CONTRIBUTORS}}",
  "pr_template": "- {{TITLE}} by @{{AUTHOR}} in #{{NUMBER}}",
  "empty_template": "- No changes",
  "label_extractor": [
    {
      "pattern": "^(build|chore|ci|docs|feat|fix|perf|refactor|revert|style|test){1}(\\([\\w-\\.]+\\))?(!)?: ([\\w ])+([\\s\\S]*)",
      "target": "$1"
    }
  ],
  "duplicate_filter": {
    "pattern": "\\[ABC-\\d+\\]",
    "on_property": "title",
    "method": "match"
  },
  "reference": {
    "pattern": "#(\\d+)",
    "on_property": "body",
    "method": "replace",
    "target": "pr"
  }
}
