# Environment variables for local development
# Copy this file to .env and fill in your values

# ==========================================
# Gateway Configuration
# ==========================================
OPENCLAW_CONFIG=./config/gateway.yaml
OPENCLAW_LOG_LEVEL=INFO
OPENCLAW_NAME=dev_gateway

# ==========================================
# Transport Ports
# ==========================================
OPENCLAW_WEBSOCKET_PORT=8765
OPENCLAW_GRPC_PORT=50051
OPENCLAW_TCP_PORT=9999

# ==========================================
# Security
# ==========================================
# JWT_SECRET=your-secret-key-here
# OPENCLAW_TLS_CERT=./certs/server.crt
# OPENCLAW_TLS_KEY=./certs/server.key

# ==========================================
# ROS Configuration
# ==========================================
ROS_DISTRO=humble
ROS_DOMAIN_ID=0

# ==========================================
# MQTT Configuration (optional)
# ==========================================
# MQTT_BROKER=localhost
# MQTT_PORT=1883
# MQTT_USERNAME=
# MQTT_PASSWORD=

# ==========================================
# Development
# ==========================================
MOCK_MODE=false
PYTHONPATH=.
PYTEST_CURRENT_TEST=1

# ==========================================
# Testing
# ==========================================
TEST_ROS_ENABLED=false
TEST_HARDWARE_ENABLED=false
