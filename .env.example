# Agent ROS Bridge Environment Variables
# Copy this file to .env and customize for your setup

# ==========================================
# Bridge Configuration
# ==========================================
AGENT_ROS_BRIDGE_CONFIG=./config/bridge.yaml
AGENT_ROS_BRIDGE_LOG_LEVEL=INFO
AGENT_ROS_BRIDGE_NAME=agent_ros_bridge

# ==========================================
# Transport Ports
# ==========================================
AGENT_ROS_BRIDGE_WEBSOCKET_PORT=8765
AGENT_ROS_BRIDGE_GRPC_PORT=50051
AGENT_ROS_BRIDGE_TCP_PORT=9999

# ==========================================
# Security (optional)
# ==========================================
# AGENT_ROS_BRIDGE_JWT_SECRET=your-secret-key-here
# AGENT_ROS_BRIDGE_TLS_CERT=./certs/server.crt
# AGENT_ROS_BRIDGE_TLS_KEY=./certs/server.key

# ==========================================
# ROS Configuration
# ==========================================
ROS_DISTRO=jazzy
ROS_DOMAIN_ID=0

# ==========================================
# MQTT Configuration (optional)
# ==========================================
# MQTT_BROKER=localhost
# MQTT_PORT=1883
# MQTT_USERNAME=
# MQTT_PASSWORD=

# ==========================================
# Development
# ==========================================
MOCK_MODE=false
PYTHONPATH=.

# ==========================================
# Testing
# ==========================================
TEST_ROS_ENABLED=false
TEST_HARDWARE_ENABLED=false
