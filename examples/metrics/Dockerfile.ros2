FROM ros:humble-ros-base

# Install Python dependencies
RUN apt-get update && apt-get install -y \
    python3-pip \
    python3-colcon-common-extensions \
    && rm -rf /var/lib/apt/lists/*

# Install agent-ros-bridge
RUN pip3 install agent-ros-bridge

# Set up workspace
WORKDIR /ros2_ws

# Copy example code
COPY metrics_demo.py /ros2_ws/

# Environment
ENV PYTHONUNBUFFERED=1
ENV ROS_DOMAIN_ID=0

EXPOSE 8774 9090

CMD ["python3", "/ros2_ws/metrics_demo.py"]
